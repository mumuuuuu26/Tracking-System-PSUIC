{
  "openapi": "3.0.0",
  "info": {
    "title": "IT Tracking System API",
    "version": "1.0.0",
    "description": "API Documentation for IT Support and Asset Tracking System",
    "contact": {
      "name": "IT Support Team",
      "email": "support@example.com"
    }
  },
  "servers": [
    {
      "url": "http://localhost:5002/api",
      "description": "Development Server"
    }
  ],
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  },
  "security": [
    {
      "bearerAuth": []
    }
  ],
  "paths": {
    "/register": {
      "post": {
        "summary": "Register a new user",
        "tags": [
          "Auth"
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": [
                  "email",
                  "password"
                ],
                "properties": {
                  "email": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Register success"
          },
          "400": {
            "description": "Validation error or Email exists"
          }
        }
      }
    },
    "/login": {
      "post": {
        "summary": "Login user",
        "tags": [
          "Auth"
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": [
                  "email",
                  "password"
                ],
                "properties": {
                  "email": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Login success (returns token)"
          },
          "400": {
            "description": "Invalid credentials"
          }
        }
      }
    }
  },
  "tags": []
}
