{
  "name": "server",
  "version": "1.0.0",
  "description": "",
  "main": "server.js",
  "scripts": {
    "preflight:db": "cross-env NODE_ENV=test node scripts/preflight-db-ready.js",
    "preflight:db:ci": "cross-env NODE_ENV=test DB_READY_RETRIES=20 DB_READY_INTERVAL_MS=2000 node scripts/preflight-db-ready.js",
    "preflight:db:prod": "node -e \"process.env.NODE_ENV='production';process.env.DB_READY_RETRIES='12';process.env.DB_READY_INTERVAL_MS='2000';require('./scripts/preflight-db-ready.js')\"",
    "preflight:storage:prod": "node -e \"process.env.NODE_ENV='production';require('./scripts/preflight-storage-ready.js')\"",
    "fix:env:file:prod": "node scripts/fix-production-env-file.js",
    "validate:env:file:prod": "node scripts/validate-production-env-file.js",
    "validate:env:prod": "node -e \"process.env.NODE_ENV='production';require('./scripts/validate-production-env.js')\"",
    "check:google:prod": "node -e \"process.env.NODE_ENV='production';require('./scripts/check-google-calendar-env.js')\"",
    "check:frontend:dist": "node scripts/check-frontend-dist.js",
    "swagger:generate:static": "node scripts/generate-swagger-static.js",
    "preflight:prod": "npm run validate:env:prod && npm run preflight:db:prod && npm run preflight:storage:prod",
    "prisma:migrate:prod": "node -e \"process.env.NODE_ENV='production';require('./scripts/apply-prisma-sql-migrations.js')\"",
    "migrate:sql:prod": "node -e \"process.env.NODE_ENV='production';require('./scripts/apply-prisma-sql-migrations.js')\"",
    "prisma:generate:prod": "node -e \"process.env.NODE_ENV='production';process.argv[2]='generate';require('./scripts/run-prisma-prod.js')\"",
    "test": "npm run preflight:db && cross-env NODE_ENV=test node scripts/run-jest.js --runInBand --openHandlesTimeout=10000",
    "test:unit": "cross-env NODE_ENV=test TEST_SKIP_DB_CONNECT=1 node scripts/run-jest.js tests/unit --runInBand --openHandlesTimeout=10000",
    "test:e2e": "npm run seed:e2e && cross-env NODE_ENV=test node scripts/run-playwright.js test",
    "seed:e2e": "cross-env NODE_ENV=test node scripts/seed-e2e.js",
    "check:e2e:selectors": "node scripts/check-e2e-selectors.js",
    "test:e2e:ci": "npm run check:e2e:selectors && cross-env NODE_ENV=test npm run test:e2e",
    "smoke:predeploy": "node scripts/smoke-predeploy.js",
    "smoke:predeploy:ci": "cross-env NODE_ENV=test node scripts/smoke-predeploy.js",
    "start": "cross-env NODE_ENV=production node server.js",
    "start:test": "cross-env NODE_ENV=test node server.js",
    "client": "cd client && npm run dev",
    "dev": "cross-env NODE_ENV=development nodemon server.js",
    "dev:full": "concurrently \"npm run dev\" \"npm run client\"",
    "https:setup": "node scripts/setup-local-https.js",
    "start:e2e": "concurrently \"npm run start:test\" \"npm run client\"",
    "install-all": "npm install && cd client && npm install",
    "seed": "node prisma/seed-complete.js",
    "seed:test": "cross-env NODE_ENV=test node prisma/seed-test.js",
    "migrate": "npx prisma migrate dev",
    "db:reset": "npx prisma migrate reset",
    "logs:clean": "rm -rf logs/*",
    "uploads:clean": "rm -rf uploads/*",
    "uploads:backup": "node scripts/backup-uploads.js",
    "backup:offsite": "node scripts/sync-offsite-backups.js",
    "uploads:backup:archive": "bash scripts/backup-uploads.sh",
    "uploads:cleanup": "node scripts/cleanup-uploads.js",
    "logs:rotate": "node scripts/rotate-runtime-logs.js",
    "uploads:migrate:room-images": "node scripts/migrate-room-images.js",
    "studio": "npx prisma studio"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "@prisma/client": "^6.16.1",
    "axios": "^1.12.1",
    "bcryptjs": "^3.0.3",
    "cloudinary": "^2.7.0",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dayjs": "^1.11.18",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "express-rate-limit": "^8.2.1",
    "googleapis": "^169.0.0",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.1",
    "node-cron": "^4.2.1",
    "nodemailer": "^7.0.12",
    "nodemon": "^3.1.10",
    "qrcode": "^1.5.4",
    "sharp": "^0.34.5",
    "socket.io": "^4.8.3",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^13.0.0",
    "winston": "^3.19.0",
    "winston-daily-rotate-file": "^5.0.0",
    "zod": "^4.3.6"
  },
  "prisma": {
    "dev": "nodemon server.js",
    "seed": "node prisma/seed-complete.js",
    "seed:it": "node prisma/seed-it.js",
    "seed:all": "node prisma/seed.js && node prisma/seed-it.js"
  },
  "devDependencies": {
    "@babel/core": "^7.29.0",
    "@babel/preset-env": "^7.29.0",
    "@playwright/test": "^1.58.2",
    "babel-jest": "^30.2.0",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "jest": "^30.2.0",
    "prisma": "^6.16.1",
    "start-server-and-test": "^2.1.3",
    "supertest": "^7.2.2"
  }
}
