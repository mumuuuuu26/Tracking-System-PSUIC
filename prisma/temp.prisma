generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = "mysql://root:2602546mn@localhost:3306/tracking_system_dev"
}

model ActivityLog {
  id          Int      @id @default(autoincrement())
  ticketId    Int
  action      String
  detail      String?  @db.Text
  createdAt   DateTime @default(now())
  updatedById Int?
  Ticket      Ticket   @relation(fields: [ticketId], references: [id], onDelete: Cascade)
  User        User?    @relation(fields: [updatedById], references: [id])

  @@index([ticketId], map: "ActivityLog_ticketId_fkey")
  @@index([updatedById], map: "ActivityLog_updatedById_fkey")
}

model Category {
  id           Int            @id @default(autoincrement())
  name         String         @unique
  SubComponent SubComponent[]
  Ticket       Ticket[]
}

model EmailTemplate {
  id          Int      @id @default(autoincrement())
  name        String   @unique
  description String?
  subject     String
  body        String   @db.Text
  isEnabled   Boolean  @default(true)
  variables   String?
  updatedAt   DateTime
}

model Equipment {
  id       Int      @id @default(autoincrement())
  name     String
  type     String
  serialNo String?  @unique
  qrCode   String?  @unique
  status   String   @default("Normal")
  roomId   Int
  Room     Room     @relation(fields: [roomId], references: [id])
  Ticket   Ticket[]

  @@index([roomId], map: "Equipment_roomId_fkey")
}

model Image {
  id         Int      @id @default(autoincrement())
  asset_id   String
  public_id  String
  url        String
  secure_url String
  type       String   @default("before")
  ticketId   Int
  createdAt  DateTime @default(now())
  Ticket     Ticket   @relation(fields: [ticketId], references: [id], onDelete: Cascade)

  @@index([ticketId], map: "Image_ticketId_fkey")
}

model Notification {
  id        Int       @id @default(autoincrement())
  userId    Int
  ticketId  Int?
  title     String
  message   String    @db.Text
  type      String
  read      Boolean   @default(false)
  readAt    DateTime?
  createdAt DateTime  @default(now())
  Ticket    Ticket?   @relation(fields: [ticketId], references: [id], onDelete: Cascade)
  User      User      @relation(fields: [userId], references: [id])

  @@index([ticketId], map: "Notification_ticketId_fkey")
  @@index([userId], map: "Notification_userId_fkey")
}

model PersonalTask {
  id          Int       @id @default(autoincrement())
  userId      Int
  title       String
  description String?   @db.Text
  date        DateTime
  startTime   DateTime?
  endTime     DateTime?
  color       String?   @default("#3B82F6")
  isCompleted Boolean   @default(false)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime
  User        User      @relation(fields: [userId], references: [id])

  @@index([date])
  @@index([userId])
}

model QuickFix {
  id          Int      @id @default(autoincrement())
  title       String
  description String   @db.Text
  image       String?
  category    String?
  views       Int      @default(0)
  createdBy   String?
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime
}

model QuickFixCategory {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime
}

model RolePermission {
  id              Int      @id @default(autoincrement())
  role            String   @unique
  viewTickets     Boolean  @default(false)
  editTickets     Boolean  @default(false)
  assignIT        Boolean  @default(false)
  manageUsers     Boolean  @default(false)
  manageEquipment Boolean  @default(false)
  updatedAt       DateTime
}

model Room {
  id         Int         @id @default(autoincrement())
  roomNumber String      @unique
  building   String?
  floor      Int?
  capacity   Int?
  imageUrl   String?     @db.LongText
  type       String?
  Equipment  Equipment[]
  Ticket     Ticket[]
}

model SubComponent {
  id         Int      @id @default(autoincrement())
  name       String
  categoryId Int
  Category   Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)

  @@index([categoryId], map: "SubComponent_categoryId_fkey")
}

model Ticket {
  id                             Int            @id @default(autoincrement())
  title                          String
  description                    String         @db.Text
  urgency                        String         @default("Medium")
  status                         String         @default("not_start")
  rating                         Int?
  userFeedback                   String?        @db.Text
  createdById                    Int
  assignedToId                   Int?
  roomId                         Int
  equipmentId                    Int?
  categoryId                     Int?
  createdAt                      DateTime       @default(now())
  updatedAt                      DateTime
  notifiedAt                     DateTime?
  readAt                         DateTime?
  resolutionTime                 Int?
  responseTime                   Int?
  checklist                      String?        @db.Text
  deletedAt                      DateTime?
  isDeleted                      Boolean        @default(false)
  note                           String?        @db.Text
  susDetails                     String?        @db.Text
  acceptedAt                     DateTime?
  completedAt                    DateTime?
  subComponent                   String?        @db.VarChar(255)
  ActivityLog                    ActivityLog[]
  Image                          Image[]
  Notification                   Notification[]
  User_Ticket_assignedToIdToUser User?          @relation("Ticket_assignedToIdToUser", fields: [assignedToId], references: [id])
  Category                       Category?      @relation(fields: [categoryId], references: [id])
  User_Ticket_createdByIdToUser  User           @relation("Ticket_createdByIdToUser", fields: [createdById], references: [id])
  Equipment                      Equipment?     @relation(fields: [equipmentId], references: [id])
  Room                           Room           @relation(fields: [roomId], references: [id])

  @@index([assignedToId])
  @@index([assignedToId, status])
  @@index([categoryId])
  @@index([createdById])
  @@index([equipmentId])
  @@index([isDeleted])
  @@index([roomId])
  @@index([status, createdAt])
  @@index([status])
  @@index([updatedAt])
  @@index([urgency])
}

model User {
  id                               Int            @id @default(autoincrement())
  username                         String?        @unique
  email                            String         @unique
  password                         String?
  name                             String?
  picture                          String?        @db.LongText
  role                             String         @default("user")
  enabled                          Boolean        @default(true)
  createdAt                        DateTime       @default(now())
  updatedAt                        DateTime
  avgRating                        Float          @default(0)
  department                       String?
  lineId                           String?
  phoneNumber                      String?
  totalRated                       Int            @default(0)
  totalResolved                    Int            @default(0)
  googleCalendarId                 String?
  isEmailEnabled                   Boolean        @default(true)
  notificationEmail                String?
  officeExtension                  String?
  workingHoursJson                 String?
  ActivityLog                      ActivityLog[]
  Notification                     Notification[]
  PersonalTask                     PersonalTask[]
  Ticket_Ticket_assignedToIdToUser Ticket[]       @relation("Ticket_assignedToIdToUser")
  Ticket_Ticket_createdByIdToUser  Ticket[]       @relation("Ticket_createdByIdToUser")

  @@index([enabled])
  @@index([role])
}
